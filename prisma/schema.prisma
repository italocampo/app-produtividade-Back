// prisma/schema.prisma

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Meta {  
  id        Int      @id @default(autoincrement())
  titulo    String
  categoria String   // 'Saude', 'Estudo', 'Trabalho'
  concluida Boolean  @default(false)
  data      DateTime @default(now()) @db.Date // Salva apenas a data, sem hora, se poss√≠vel, ou usa DateTime normal
  createdAt DateTime @default(now())

  @@map("metas") // Nome da tabela no banco
}